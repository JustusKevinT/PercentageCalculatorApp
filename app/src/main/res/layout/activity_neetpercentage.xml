<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NEETPercentageActivity">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="220dp"
        android:text="NEET Mark :"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/neetmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:background="@drawable/custom_input"
        android:hint="Enter the mark"/>

    <Button
        android:id="@+id/calculateneetPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="414dp"
        android:text="Calculate Percentile" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="303dp"
        android:text="Top NEET Mark:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/neettopmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="286dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:hint="Enter the mark"/>

    <TextView
        android:id="@+id/percentResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="173dp"
        android:text=""
        android:textStyle="bold"
        android:textSize="25dp"/>
</RelativeLayout>